# ===========================================
# CodeMaker v2 - Environment Configuration
# ===========================================

# =====================================
# Database Configuration
# =====================================
DATABASE_URL="postgresql://codemaker:codemaker_dev_pass@localhost:5432/codemaker_v2"
POSTGRES_DB="codemaker_v2"
POSTGRES_USER="codemaker"
POSTGRES_PASSWORD="codemaker_dev_pass"

# =====================================
# Redis Configuration
# =====================================
REDIS_URL="redis://:redis_dev_pass@localhost:6379"
REDIS_PASSWORD="redis_dev_pass"

# =====================================
# Application Settings
# =====================================
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"
AI_ENGINE_URL="http://localhost:8000"

# =====================================
# Authentication & Security
# =====================================
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_EXPIRE_TIME="7d"
JWT_REFRESH_EXPIRE_TIME="30d"
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET="your-session-secret-key-change-in-production"
COOKIE_SECRET="your-cookie-secret-key-change-in-production"

# =====================================
# AI Service API Keys
# =====================================
# Anthropic Claude API
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# OpenAI API
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_ORG_ID=""

# =====================================
# Vector Database Configuration
# =====================================
# Pinecone (Cloud Vector DB)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="codemaker-v2"

# ChromaDB (Local Vector DB)
CHROMA_HOST="localhost"
CHROMA_PORT=8001

# =====================================
# Payment Integration (Stripe)
# =====================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_ID_PRO="price_your_pro_plan_id"
STRIPE_PRICE_ID_TEAM="price_your_team_plan_id"
STRIPE_PRICE_ID_ENTERPRISE="price_your_enterprise_plan_id"

# =====================================
# Email Configuration (SMTP)
# =====================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="CodeMaker v2 <noreply@codemaker.dev>"

# =====================================
# File Storage (AWS S3 or MinIO)
# =====================================
S3_BUCKET_NAME="codemaker-v2-files"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# MinIO (Local S3-compatible storage)
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"

# =====================================
# Monitoring & Logging
# =====================================
# Sentry (Error Monitoring)
SENTRY_DSN="your-sentry-dsn-url"

# Log Level (error, warn, info, debug)
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# =====================================
# Rate Limiting
# =====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=20

# =====================================
# CORS Configuration
# =====================================
CORS_ORIGIN="http://localhost:3000,https://codemaker.dev"
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE"
CORS_CREDENTIALS=true

# =====================================
# Development Settings
# =====================================
# Enable detailed error messages in development
DETAILED_ERRORS=true

# Enable API documentation (Swagger)
ENABLE_DOCS=true

# Hot reload for development
HOT_RELOAD=true

# =====================================
# SSL/TLS Configuration (Production)
# =====================================
SSL_CERT_PATH="/etc/ssl/certs/codemaker.crt"
SSL_KEY_PATH="/etc/ssl/private/codemaker.key"
HTTPS_PORT=443

# =====================================
# Docker Configuration
# =====================================
COMPOSE_PROJECT_NAME="codemaker-v2"
DOCKER_BUILDKIT=1

# =====================================
# Feature Flags
# =====================================
FEATURE_TEAM_COLLABORATION=true
FEATURE_ENTERPRISE_SSO=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CUSTOM_MODELS=false
