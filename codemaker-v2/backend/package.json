{
  "name": "codemaker-v2-backend",
  "version": "2.0.0",
  "description": "CodeMaker v2 Backend - Node.js API server with TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/database/seed.ts",
    "db:reset": "prisma migrate reset",
    "docker:build": "docker build -t codemaker-v2-backend .",
    "docker:run": "docker run -p 3001:3001 codemaker-v2-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.10.0",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "bull": "^4.11.3",
    "prisma": "^5.2.0",
    "@prisma/client": "^5.2.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "nodemailer": "^6.9.4",
    "stripe": "^13.5.0",
    "uuid": "^9.0.0",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "tsc-alias": "^1.8.7",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "api",
    "backend",
    "postgresql",
    "redis",
    "jwt",
    "authentication",
    "websocket"
  ]
}
